<div class="container">
  <div class="row">
    <div class="col-lg-4" style="background-color: orange;">
      <%= render partial:'list',locals:{user:current_user,book:book.new} %>
    </div>
  <div class="col-lg-8">
    <h1>Users</h1>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="1"></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <%= link_to user_path(user.id) do %>
        <% end %>
        <tr>
          <td><%= image_tag user.get_profile_image(100,100) %></td>
          <td><%= user.name %></td>
          <td><%= link_to "show", user_path(user.id) %></td>
        </tr>
      <% end %>
        
      </tbody>
    </table>
  </div>
  </div>
</div>