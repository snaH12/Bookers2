<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model: @user, url: user_path(@user.id), method: :patch do |f| %>
        <div class="form-group">
          <label for="inputName">Name</label>
          <%= f.text_field :name %>
        </div>
        <div class="form-group">
          <label for="inputImage">Image</label>
          <%= f.file_field :profile_image, accept: "image/*" %>
        </div>
        <div class="form-group">
          <label for="user_introduction">Introduction</label>
          <%= f.text_area :introduction %>
        </div>
        <div class="form-group">
          <label for="form_group">
            <%= f.submit 'update' %>
          </label>
        </div>
      <% end %>
    </div>
  </div>
</div>

